<div>
    <form id="createCourseForm">
        <div class="form-group">
            <label for="firstName">Nombre:</label>
            <input type="text" id="name" name="name" class="form-control" />
        </div>
        <div class="form-group">
            <label for="description">Descripcion:</label>
            <input type="text" id="description" name="description" class="form-control" />
        </div>
        <div class="form-group">
            <label for="credit">Creditos:</label>
            <input type="text" id="credit" name="credit" class="form-control" />
        </div>
        <button type="button" id="submitCourseButton" class="btn btn-success">Guardar</button>
    </form>
</div>

<script>
    $(document).ready(function () {

        $('#submitCourseButton').click(function () {
            var name = $('#name').val();
            var description = $('#description').val();
            var credit = $('#credit').val();


            $.ajax({
                type: "POST",
                url: "/CoursesAjax/SubmitForm",
                data: {
                    name: name,
                    description: description,
                    credit: credit
                },
                success: function (response) {
                    // alert(response);
                    console.log(response);
                    $('#createCourseModal').modal('hide');
                    location.reload(); // Recargar la página para ver la lista actualizada
                },
                error: function () {
                    alert('Hubo un error al crear el estudiante.');
                }
            });
        });
    });
</script>
