@model IEnumerable<Course>

@{
    ViewData["Title"] = "Lista de Estudiantes";
}

<h2>Lista de Cursos</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Credit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.CourseID</td>
                <td>@course.Name</td>
                <td>@course.Description</td>
                <td>@course.Credit</td>
            </tr>
        }
    </tbody>
</table>


<button id="createCourseButton" class="btn btn-primary">Crear Curso</button>

<!-- Modal -->
<div class="modal fade" id="createCourseModal" tabindex="-1" role="dialog" aria-labelledby="createCourseLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createCourseLabel">Crear Curso</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- El contenido del modal se carga aquí -->
            </div>
        </div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

<script>
    $(document).ready(function () {
        // Cargar el contenido del modal
        $('#createCourseButton').click(function () {
            $.ajax({
                type: "GET",
                url: "/CoursesAjax/CreateCourse",
                success: function (response) {
                   
                    $('.modal-body').html(response);
                    $('#createCourseModal').modal('show');
                },
                error: function () {
                    alert('Hubo un error al cargar el formulario.');
                }
            });
        });
    });
</script>