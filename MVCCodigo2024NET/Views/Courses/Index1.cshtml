@{
}

@model CourseViewModel

<form asp-action="Index1"  method="get">
    <input type="text" name="searchTerm" value="@Model.SearchTerm" placeholder="Search products..." />
    <button type="submit">Search</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Courses)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Credit</td>
            </tr>
        }
    </tbody>
</table>